@model WareHouse.Models.ProductQuantityModel

@{
	ViewBag.Title = "Send product";
}
<br />
<br />
<h2>@ViewBag.Title.</h2>
<br />
<br />
@using (Ajax.BeginForm("SendProduct", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSubmitSuccess", OnFailure = "OnSubmitFailure" }))

{
	<div class="form-row">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" }) <br />
		@Html.LabelFor(m => m.Quantity) <br />
		@Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", placeholder = "Quantity" } })
		@Html.ValidationMessageFor(m => m.Quantity)
	</div>

	<br />
	<div class="form-row">
		<button id="btnAdd" type="submit" class="btn btn-primary">Add</button>
	</div>
}

<br />
<div class="form-row">
	<h5>@ViewBag.Message</h5>
</div>

@section scripts
{
	<script type="text/javascript">
		function OnSubmitSuccess(data) {
			alert(data.Message);
		}

		function OnSubmitFailure(data) {
			alert(data.Message);
		}
	</script>
}
